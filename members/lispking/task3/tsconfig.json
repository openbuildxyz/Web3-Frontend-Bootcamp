{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": ["./scripts", "./test"],
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./scripts", "./test"],
  "files": ["./hardhat.config.ts"]
}
